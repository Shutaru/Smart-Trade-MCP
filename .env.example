# MCP Server Configuration
MCP_SERVER_NAME="smart-trade-mcp"
MCP_SERVER_VERSION="0.1.0"
LOG_LEVEL="INFO"

# Trading Configuration
EXCHANGE="binance"
TESTNET=true
DRY_RUN=true

# API Keys (NEVER commit real keys!)
BINANCE_API_KEY="your_api_key_here"
BINANCE_SECRET_KEY="your_secret_key_here"

# Database
DATABASE_URL="sqlite+aiosqlite:///data/smart_trade.db"

# Optimization
MAX_WORKERS=4
GPU_ENABLED=false
GPU_DEVICE_IDS="0,1,2,3"

# Meta-Learning
ML_MODEL_PATH="data/ml/meta_learner.pt"
ML_ENABLED=true

# Risk Management
MAX_POSITION_SIZE=0.1
MAX_DRAWDOWN=0.2
STOP_LOSS_PCT=0.05

# Backtesting
BACKTEST_START_DATE="2023-01-01"
BACKTEST_END_DATE="2024-01-01"
INITIAL_CAPITAL=10000

# Agent Configuration
AGENT_MAX_ITERATIONS=100
AGENT_LOOP_DETECTION_THRESHOLD=3
WORKFLOW_ENFORCEMENT=true
