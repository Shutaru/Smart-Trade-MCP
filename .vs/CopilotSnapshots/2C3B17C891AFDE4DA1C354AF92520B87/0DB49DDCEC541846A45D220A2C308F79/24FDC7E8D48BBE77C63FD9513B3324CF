                Tool(
                    name="run_nfold_walk_forward",
                    description="Run N-Fold Walk-Forward Analysis - Advanced WFA with K-fold cross-validation per window",
                    inputSchema={
                        "type": "object",
                        "properties": {
                            "strategy_name": {
                                "type": "string",
                                "description": "Name of strategy to validate",
