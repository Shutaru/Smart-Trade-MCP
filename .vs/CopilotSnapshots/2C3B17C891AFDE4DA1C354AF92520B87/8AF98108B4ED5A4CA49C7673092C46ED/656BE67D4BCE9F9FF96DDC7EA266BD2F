import React, { useEffect, useRef, useState } from 'react'
import TradingChart from './TradingChart'
import MoneyFlowChart from './MoneyFlowChart'

export default function BotModal({ open, onClose, details }: { open: boolean; onClose: () => void; details: any }) {
  const [stopping, setStopping] = useState(false)
  const dialogRef = useRef<HTMLDivElement | null>(null)
  const closeBtnRef = useRef<HTMLButtonElement | null>(null)

  // Focus trap
  useEffect(() => {
    if (!open) return
    const dialog = dialogRef.current
    const focusable = 'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
    const nodes = dialog ? Array.from(dialog.querySelectorAll<HTMLElement>(focusable)) : []
    const first = nodes[0]
    const last = nodes[nodes.length - 1]
    function onKey(e: KeyboardEvent) {
      if (e.key === 'Escape') {
        e.stopPropagation()
        onClose()
      } else if (e.key === 'Tab') {
        if (!nodes.length) return
        if (e.shiftKey) {
          if (document.activeElement === first) {
            e.preventDefault()
            last.focus()
          }
        } else {
          if (document.activeElement === last) {
            e.preventDefault()
            first.focus()
          }
        }
      }
    }
    document.addEventListener('keydown', onKey)
    // focus first
    setTimeout(() => {
      first ? first.focus() : closeBtnRef.current?.focus()
    }, 50)
    return () => document.removeEventListener('keydown', onKey)
  }, [open, onClose])

  if (!open) return null

  const agentId = details?.agent?.agent_id

  async function stopAgent() {
    if (!agentId) return
    if (!confirm('Stop agent ' + agentId + '?')) return
    setStopping(true)
    try {
      const res = await fetch(`/api/v1/paper/bots/${agentId}/stop`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ reason: 'Stopped via UI' })
      })
      if (!res.ok) throw new Error(await res.text())
      alert('Agent stopped')
      onClose()
    } catch (e: any) {
      console.error('Failed to stop agent', e)
      alert('Failed to stop agent: ' + (e?.message || e))
    } finally {
      setStopping(false)
    }
  }

  return (
    <div className="fixed inset-0 z-50 flex items-center justify-center">
      <div className="absolute inset-0 bg-black/50 backdrop-blur-sm" onClick={onClose} />

      <div
        ref={dialogRef}
        role="dialog"
        aria-modal="true"
        aria-label={`Agent details ${agentId}`}
        className="relative w-[95%] md:w-[90%] lg:w-[80%] xl:w-[70%] bg-panel rounded-2xl shadow-2xl p-6 z-60 transform transition-all duration-300 scale-100 opacity-100"
      >
        <div className="flex justify-between items-start mb-4">
          <div>
            <h2 className="text-xl font-bold">{details.agent?.symbol} — {details.agent?.strategy}</h2>
            <div className="small-muted">{details.agent?.agent_id}</div>
          </div>
          <div className="flex items-center gap-3">
            <button
              ref={closeBtnRef}
              className="px-3 py-1 rounded bg-white/5 hover:bg-white/8"
              onClick={onClose}
            >
              Close
            </button>
            <button
              className="btn-theme"
              onClick={stopAgent}
              disabled={stopping}
              aria-disabled={stopping}
            >
              {stopping ? 'Stopping...' : 'Stop Agent'}
            </button>
          </div>
        </div>

        <div className="grid grid-cols-1 lg:grid-cols-3 gap-4">
          <div className="lg:col-span-2">
            <div className="card-panel" style={{ height: 420 }}>
              {details ? (
                <TradingChart symbol={details.agent.symbol} timeframe={details.agent.timeframe} trades={details.trades || []} />
              ) : (
                <div className="h-full flex items-center justify-center">Loading...</div>
              )}
            </div>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
              <div className="card-panel">
                <h4 className="font-semibold mb-2">Equity / Money Flow</h4>
                {details ? (
                  <MoneyFlowChart series={(details.performance?.equity_series || [{ time: new Date().toISOString(), value: 0 }])} />
                ) : (
                  <div className="h-24 bg-gray-100 rounded animate-pulse" />
                )}
              </div>

              <div className="card-panel">
                <h4 className="font-semibold mb-2">Trades</h4>
                <div className="mt-2 max-h-64 overflow-auto">
                  <table className="w-full text-sm">
                    <thead>
                      <tr className="text-left small-muted">
                        <th>Time</th><th>Side</th><th>Entry</th><th>Exit</th><th>PnL</th>
                      </tr>
                    </thead>
                    <tbody>
                      {(details.trades || []).map((t: any) => (
                        <tr key={t.id} className="border-b">
                          <td className="py-2 small-muted">{t.entry_time}</td>
                          <td>{t.direction}</td>
                          <td>{t.entry_price}</td>
                          <td>{t.exit_price || '-'}</td>
                          <td className={`font-bold ${t.pnl > 0 ? 'text-green-500' : 'text-red-500'}`}>{t.pnl || '-'}</td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

          <aside>
            <div className="card-panel">
              <h4 className="font-semibold mb-2">Summary</h4>
              <div className="grid grid-cols-1 gap-3">
                <div className="p-3 bg-gray-100 rounded text-center">
                  <div className="small-muted">Total Trades</div>
                  <div className="font-bold">{details.performance?.total_trades || 0}</div>
                </div>
                <div className="p-3 bg-gray-100 rounded text-center">
                  <div className="small-muted">Win Rate</div>
                  <div className="font-bold">{details.performance?.win_rate || 0}%</div>
                </div>
                <div className="p-3 bg-gray-100 rounded text-center">
                  <div className="small-muted">Total PnL</div>
                  <div className="font-bold">{details.performance?.total_pnl || 0}</div>
                </div>
              </div>
            </div>

            <div className="mt-4 card-panel">
              <h4 className="font-semibold mb-2">Controls</h4>
              <div className="space-y-2">
                <button className="btn-theme w-full" onClick={stopAgent} disabled={stopping}>{stopping ? 'Stopping...' : 'Stop Agent'}</button>
                <button className="w-full border rounded px-3 py-2">Edit Params</button>
                <button className="w-full border rounded px-3 py-2">View Logs</button>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>
  )
}
